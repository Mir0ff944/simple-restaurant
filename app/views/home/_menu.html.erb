<div class='container menu-white-bg'>
  <h1 class='section-title'><%= t('nav.menu')%></h1>
  <hr class='line-separator' />
  <div class='row justify-content-md-center'>
    <div class='col'></div>
    <div class='col-md-auto'>
      <table class='table table-hover rem-1-font'>
        <thead>
        <th scope='col'></th>
        <th scope='col'><%= t('menu.dish') %></th>
        <th scope='col'><%= t('menu.price') %></th>
        </thead>
        <tbody>
        <% menu_reader.each_with_index do |(dish, price), ix| %>
          <tr>
            <th scope='row'><%= ix + 1 %></th>
            <td><%= dish %></td>
            <td><%= price %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class='col'></div>
    <div class='col-md-auto'>
      <table class='table table-hover'>
        <thead>
        <th scope='col'></th>
        <th scope='col'><%= t('menu.drink') %></th>
        <th scope='col'><%= t('menu.price') %></th>
        </thead>
        <tbody>
        <% drinks_reader.each_with_index do |(drink, price), ix| %>
          <tr>
            <th scope='row'><%= ix + 1%></th>
            <td><%= sanitize drink.to_s %></td>
            <td><%= price %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class='col'></div>
  </div>
</div>
